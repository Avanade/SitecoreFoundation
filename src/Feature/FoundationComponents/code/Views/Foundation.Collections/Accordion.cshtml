@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@using SF.Foundation.Container
@using SF.Foundation.Structure
@using SF.Foundation.CommonComponents

@model RenderingModel

@{
    System.Text.StringBuilder sb = new System.Text.StringBuilder();
    sb.Append("data-accordion");

    string accordianGroup = Html.GetRenderingParameter("Accordian Group");
    if (!string.IsNullOrEmpty(accordianGroup))
    {
        sb.Append(@"=""").Append(accordianGroup).Append(@"""");    
    }
    
    var dataAccordian = sb.ToString();
}

@using (Html.ComponentContainer("accordian-container"))
{
     if (Sitecore.Context.PageMode.IsExperienceEditorEditing)
     {
          @Html.Sitecore().DynamicPlaceholder("AccordianPanels")
     }
    else
     {
        <ul class="accordion" @dataAccordian role="tablist">
            @Html.Sitecore().DynamicPlaceholder("AccordianPanels")
        </ul>
    }
}
