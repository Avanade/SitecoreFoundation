@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@using SF.Foundation.Container
@using SF.Foundation.Structure
@using SF.Foundation.CommonComponents

@model RenderingModel

@{
    string blockGridClasses = string.Empty;
    string small = Html.GetRenderingParameter("Small");
    if (!string.IsNullOrEmpty(small))
    {
        blockGridClasses += " small-block-grid-" + small;
    }
    
    string medium = Html.GetRenderingParameter("Medium");
    if (!string.IsNullOrEmpty(medium))
    {
        blockGridClasses += " medium-block-grid-" + medium;
    }
    
    string large = Html.GetRenderingParameter("Large");
    if (!string.IsNullOrEmpty(large))
    {
        blockGridClasses += " large-block-grid-" + large;
    }
    
    if (blockGridClasses == string.Empty)
    {
        blockGridClasses = "small-block-grid-1";
    }
}

<ul @Html.GetContainerTagAttributes(blockGridClasses)>
@Html.Sitecore().DynamicPlaceholder("BlockGridItems")
</ul>