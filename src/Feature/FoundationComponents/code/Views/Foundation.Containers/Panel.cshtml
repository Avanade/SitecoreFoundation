@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@using SF.Foundation.Container
@using SF.Foundation.Structure
@using SF.Foundation.Components

@model RenderingModel

@{
    //Get Button Rendering Parameter Values
    string style = Html.GetRenderingParameter("Style");
    bool isCallout = Html.GetCheckboxRenderingParameterValue("Is Callout");
    
    System.Text.StringBuilder sb = new System.Text.StringBuilder();
    sb.Append("panel");

    if (isCallout)
    {
        sb.Append(" callout");
    }
    
    if (!string.IsNullOrEmpty(style))
    {
        sb.Append(" ").Append(style);
    }
    
    var componentClass = sb.ToString();
}

@using (Html.ComponentContainer(componentClass))
{
    @Html.Sitecore().DynamicPlaceholder("Column1")
}