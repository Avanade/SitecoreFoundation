<!--
	See Unicorn.config for commentary on how configurations operate, or https://github.com/kamsar/Unicorn/blob/master/README.md
-->
<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <unicorn>
      <configurations>
        <configuration 
					name="Feature.Composite" 
					description="Feature.Composite templates and renderings"
					dependencies="Foundation.*, Feature.FoundationComponents"
				>
          <targetDataStore
            physicalRootPath="$(featureFolder)\Composite\$(configurationFolder)"
            useDataCache="false"
            type="Rainbow.Storage.SerializationFileSystemDataStore, Rainbow"
            singleInstance="true"
          />
          <predicate type="Unicorn.Predicates.SerializationPresetPredicate, Unicorn" singleInstance="true">
            <include name="ThemeExtensions" database="master" path="/sitecore/media library/Extension Themes/Composite"/>
            <include name="Templates" database="master" path="/sitecore/templates/Feature/SF/Composite"/>
            <include name="Branches" database="master" path="/sitecore/templates/Branches/Feature/SF/Composite"/>
            <include name="Renderings" database="master" path="/sitecore/layout/Renderings/Feature/SF/Composite"/>
            <include name="Layouts" database="master" path="/sitecore/layout/Layouts/Feature/SF/Composite"/>
            <include name="Feature" database="master" path="/sitecore/system/Settings/Feature/SF/Composite"/>

          </predicate>
        </configuration>
      </configurations>
    </unicorn>
  </sitecore>
</configuration>
